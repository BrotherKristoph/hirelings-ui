{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "LICENSE",
      "package-lock.json"
    ],
    "rewrites": [
      {
        "source": "/ui**",
        "destination": "/index.html"
      }, {
        "source": "/api",
        "function": "root"
      }
    ]
  }
}
